{
    "name": "platform/media",
    "type": "platform-extension",
    "description": "A Platform extension for media managemenet.",
    "keywords": [
        "php",
        "cartalyst",
        "platform",
        "laravel",
        "extension",
        "media"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com",
            "homepage": "https://cartalyst.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.cartalyst.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "cartalyst/composer-installers": "^2.0",
        "cartalyst/filesystem": "^6.0",
        "cartalyst/support": "^5.0",
        "intervention/image": "^2.3",
        "intervention/imagecache": "^2.3",
        "platform/access": "^10.0",
        "platform/foundation": "^10.0",
        "platform/tags": "^10.0"
    },
    "require-dev": {
        "cartalyst/php-cs-fixer-config": "^1.0",
        "laravel/framework": "^8.0",
        "cartalyst/testing": "^5.0",
        "patchwork/utf8": "^1.1"
    },
    "autoload": {
        "classmap": [
            "resources/database/migrations",
            "resources/database/seeds"
        ],
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Platform\\Media\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Platform\\Media\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "component": "extension",
        "branch-alias": {
            "dev-master": "10.0.x-dev"
        }
    },
    "scripts": {
        "cs:check": "./vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=estimating --diff --dry-run --config .php_cs.php",
        "cs:fix": "./vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=estimating --config .php_cs.php",
        "test": "./vendor/bin/phpunit --verbose --colors=always"
    }
}
